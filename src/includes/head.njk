<!DOCTYPE html>
<html class="{{ htmlClass }}" lang="{{ site.lang }}">
  <head>
    <meta charset="utf-8">
    <title>{% if title %}{{ title }} Â· {{ site.title }}{% else %}{{ site.title or site.name}}{% endif %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="{{ description or site.description }}">
    <meta name="referrer" content="no-referrer-when-downgrade">
    <meta name="author" content=" Maurizio Proietti ">

    {# Open graph related #}
    <meta property="og:title" content="{{ title or site.title or site.name }}" />
    <meta property="og:type" content="{{ type or site.type }}" />
    <meta property="og:url" content="{{ url or site.url }}" />
    <meta property="og:image" content="{{ image or site.image }}" />
    <meta property="og:site_name" content="{{ name or site.name }}" />
    <meta property="og:description" content="{{ description or site.description }}" />

    <link rel="manifest" href="/manifest.json">

    <meta name="theme-color" content="#fff" />

    <meta name="google-site-verification" content="x8jXLnKbrs-ceSKhFhvGG_w8JMmQ1-2k3XxUOJoH7ow" />


    <meta name="msapplicati on-TileColor" content="#ffffff">

    <link rel="canonical" href={{ url or site.url }}/>

    <link rel="stylesheet" href="{% webpack 'main.css' %}">

    <script src="https://kit.fontawesome.com/2845a43a9e.js" crossorigin="anonymous"></script>

    <script>
      if ("serviceWorker" in navigator)
        navigator.serviceWorker.register("/service-worker.js");
    </script>


  </head>
